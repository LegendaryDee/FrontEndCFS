<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controllers.NotificationsController">
    <!-- Top Section: Title -->
    <top>
        <Label text="Notifications" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;" />
    </top>

    <!-- Center Section: Notifications List -->
    <center>
        <ListView fx:id="notificationsListView" prefHeight="200" prefWidth="300" />
    </center>

    <!-- Bottom Section: Controls -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button text="Clear All" onAction="#clearAllNotifications" />
            <Button text="Dismiss Selected" onAction="#dismissSelectedNotification" />
            <Button layoutX="14.0" layoutY="25.0" mnemonicParsing="false" onMouseClicked="#back" prefHeight="15.0" prefWidth="75.0" text="back"/>
        </HBox>
    </bottom>
</BorderPane>