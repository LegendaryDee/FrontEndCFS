<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.controllers.CourseRankingController" spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Course Rankings" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <TableView fx:id="rankingTable" style="-fx-pref-width: 600;">
        <columns>
            <TableColumn text="User" fx:id="userColumn"/>
            <TableColumn text="Score" fx:id="scoreColumn"/>
            <TableColumn text="Rank" fx:id="rankColumn"/>
        </columns>
    </TableView>

    <Button text="Back" onAction="#goBack"/>
</VBox>
