<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controllers.PictureExerciseController">
    
    <!-- Center Section: Image and Input -->
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <ImageView fx:id="exerciseImage" 
                       fitHeight="200" 
                       fitWidth="200" 
                       preserveRatio="true" />
            <TextField fx:id="answerField" 
                       promptText="Enter your answer here" 
                       style="-fx-font-size: 16px;" />
            <Label fx:id="feedbackLabel" 
                   text="" 
                   style="-fx-font-size: 14px;" />
        </VBox>
    </center>
    
    <!-- Bottom Section: Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button text="Check" 
                    onAction="#checkAnswer" 
                    style="-fx-font-size: 14px;" />
            <Button text="Next" 
                    onAction="#nextExercise" 
                    style="-fx-font-size: 14px;" />
        </HBox>
    </bottom>
</BorderPane>