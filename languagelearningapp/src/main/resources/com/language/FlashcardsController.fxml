<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.controllers.FlashcardsController" spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <Label fx:id="wordLabel" text="Word" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    <Label fx:id="translationLabel" text="Translation" style="-fx-font-size: 16;"/>
    <Label fx:id="phraseLabel" text="Phrase" style="-fx-font-size: 14; -fx-font-style: italic;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="prevButton" text="Previous" onAction="#onPrevButtonClick"/>
        <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClick"/>
    </HBox>
</VBox>
