<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="379.0" prefWidth="518.0" style="-fx-background-color: mediumpurple;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.controllers.AddCourseController">
    <children>
        <!-- Title Label -->
        <Text fx:id="titleLabel" layoutX="180" layoutY="20" style="-fx-font-size: 24px;" text="Add New Course" />

        <!-- Language ComboBox -->
        <ComboBox fx:id="languageComboBox" layoutX="165.0" layoutY="82.0" prefWidth="200" promptText="Select Language" />

        <!-- Proficiency ComboBox -->
        <ComboBox fx:id="proficiencyComboBox" layoutX="165.0" layoutY="117.0" prefWidth="200" promptText="Select Proficiency" />

        <!-- Add Course Button -->
        <Button fx:id="addCourseButton" layoutX="165.0" layoutY="156.0" onAction="#onAddCourseClicked" prefWidth="200" text="Add Course" />

        <!-- Back Button -->
        <Button layoutX="165.0" layoutY="199.0" onMouseClicked="#back" prefWidth="200" text="Back" />
    </children>
</AnchorPane>
