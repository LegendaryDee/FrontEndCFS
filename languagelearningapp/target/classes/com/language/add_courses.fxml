<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="333.0" prefWidth="348.0" spacing="10" style="-fx-background-color: mediumslateblue;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.controllers.AddCourseController">
    <Label style="-fx-font-size: 20px;" text="Add Course" />
    <HBox spacing="10">
        <Label text="Title:" />
      <VBox />
        <TextField fx:id="courseTitleField" alignment="TOP_LEFT" prefWidth="171.0" promptText="Enter course title" />
    </HBox>
    <HBox spacing="10">
        <Label text="Description:" />
        <TextField fx:id="courseDescriptionField" promptText="Enter course description" />
    </HBox>
    <HBox spacing="10">
        <Label text="Language:" />
        <ComboBox fx:id="languageComboBox" prefWidth="182.0" promptText="Select language" />
    </HBox>
    <HBox spacing="10">
        <Label text="Proficiency:" />
        <ComboBox fx:id="proficiencyComboBox" promptText="Select proficiency level" />
    </HBox>
    <Button onAction="#onAddCourseClicked" prefHeight="26.0" prefWidth="93.0" text="Add Course" />
    <Button fx:id="backButton" onMouseClicked="#back" prefHeight="26.0" prefWidth="93.0" text="Back" />
</VBox>
