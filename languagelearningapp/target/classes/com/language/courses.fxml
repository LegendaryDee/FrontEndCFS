<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: mediumpurple;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.CourseController">
    <Label style="-fx-font-size: 20px;" text="Course Management" />
    <ListView fx:id="courseListView" prefHeight="200" prefWidth="400" />
    <HBox alignment="CENTER" spacing="10">
            <Button fx:id="removeCourseButton" onAction="#dismissSelectedCourse" text="Remove Course" />
            <Button fx:id="goToScreenButton" onAction="#transitionToCourse" text="Go to Screen" />
            <Button onAction="#back" text="Back" />
    </HBox>
</VBox>
