<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: blueviolet;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.controllers.CourseController">
    <Label style="-fx-font-size: 20px;" text="Course Management" />
    <ListView fx:id="courseListView" prefHeight="200" prefWidth="400" />
    <HBox alignment="CENTER" spacing="10">
            <Button fx:id="goToScreenButton" text="Start Course" onAction="#transitionToCourse"/>
            <Button fx:id="removeCourseButton" text="Remove Course" onAction="#dismissSelectedCourse"/>
            <Button text="Back" onAction="#back"/>
    </HBox>
</VBox>
