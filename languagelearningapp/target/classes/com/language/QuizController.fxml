<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.QuizController" spacing="20" alignment="CENTER" prefWidth="400" prefHeight="300">
    <Label fx:id="questionLabel" text="Question goes here" wrapText="true" style="-fx-font-size: 18px;"/>
    <VBox spacing="10">
        <RadioButton fx:id="option1" text="Option 1" />
        <RadioButton fx:id="option2" text="Option 2" />
        <RadioButton fx:id="option3" text="Option 3" />
        <RadioButton fx:id="option4" text="Option 4" />
    </VBox>
    <Button fx:id="nextButton" text="Next" onAction="#handleNext" />
    <Label fx:id="scoreLabel" text="Your score: 0 / 5" style="-fx-font-size: 16px;"/>
</VBox>
