<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.QuizController" spacing="20" alignment="CENTER" prefWidth="400" prefHeight="400">
    <Label fx:id="questionLabel" text="Question goes here" wrapText="true" style="-fx-font-size: 18px;" />
    <RadioButton fx:id="option1" text="Option 1" style="-fx-font-size: 16px;" />
    <RadioButton fx:id="option2" text="Option 2" style="-fx-font-size: 16px;" />
    <RadioButton fx:id="option3" text="Option 3" style="-fx-font-size: 16px;" />
    <RadioButton fx:id="option4" text="Option 4" style="-fx-font-size: 16px;" />
    <Button fx:id="submitButton" text="Submit" onAction="#handleSubmit" style="-fx-font-size: 14px;" />
    <Label fx:id="scoreLabel" text="Your score: 0 / 5" style="-fx-font-size: 16px;" />
    <Button fx:id="backButton" text="Back to Main" onAction="#handleBackButton" style="-fx-font-size: 14px;" />
</VBox>
