<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="400" spacing="20" style="-fx-background-color: mediumpurple;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.controllers.QuizController">
    <Label fx:id="questionLabel" style="-fx-font-size: 18px;" text="Question goes here" wrapText="true" />
    <RadioButton fx:id="option1" style="-fx-font-size: 16px;" text="Option 1" />
    <RadioButton fx:id="option2" style="-fx-font-size: 16px;" text="Option 2" />
    <RadioButton fx:id="option3" style="-fx-font-size: 16px;" text="Option 3" />
    <RadioButton fx:id="option4" style="-fx-font-size: 16px;" text="Option 4" />
    <Button fx:id="submitButton" onAction="#handleSubmit" style="-fx-font-size: 14px;" text="Submit" />
    <Label fx:id="scoreLabel" style="-fx-font-size: 16px;" text="Your score: 0 / 5" />
    <Button fx:id="backButton" onAction="#handleBackButton" style="-fx-font-size: 14px;" text="Back to Main" />
</VBox>
