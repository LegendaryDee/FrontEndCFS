<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="372.0" prefWidth="355.0" spacing="20" style="-fx-padding: 20; -fx-background-color: mediumpurple;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.FlashcardsController">
    <Label fx:id="wordLabel" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Word" />
    <Label fx:id="translationLabel" style="-fx-font-size: 16;" text="Translation" />
    <Label fx:id="phraseLabel" style="-fx-font-size: 14; -fx-font-style: italic;" text="Phrase" />

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="prevButton" onAction="#onPrevButtonClick" text="Previous" />
        <Button fx:id="nextButton" onAction="#onNextButtonClick" text="Next" />
    </HBox>
</VBox>
