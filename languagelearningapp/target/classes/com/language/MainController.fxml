<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.controllers.MainController" spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Spanish Course Modules" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <TableView fx:id="modulesTable" style="-fx-pref-width: 600;">
        <columns>
            <TableColumn text="Module" fx:id="moduleColumn"/>
            <TableColumn text="Description" fx:id="descriptionColumn"/>
            <TableColumn text="Action" fx:id="actionColumn"/>
        </columns>
    </TableView>

    <Button text="Exit" onAction="#exitApplication"/>
</VBox>
