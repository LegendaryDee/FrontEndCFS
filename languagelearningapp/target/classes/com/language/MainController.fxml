<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: mediumpurple;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.MainController">
    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Spanish Course Modules" textFill="WHITE" />

    <TableView fx:id="modulesTable" style="-fx-pref-width: 600; -fx-background-color: white;">
        <columns>
            <TableColumn fx:id="moduleColumn" text="Module" />
            <TableColumn fx:id="descriptionColumn" text="Description" />
            <TableColumn fx:id="actionColumn" text="Action" />
        </columns>
    </TableView>

    <Button mnemonicParsing="false" onMouseClicked="#exitApplication" stylesheets="@styles.css" text="Back" />
</VBox>
